{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"text": true,
			"custom": true,
			"background": true,
			"link": true,
			"palette": [
				{
					"color": "#f9f9f9",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#ffffff",
					"name": "Base / Two",
					"slug": "base-2"
				},
				{
					"color": "#e9e9e9",
					"name": "Base / Three",
					"slug": "base-3"
				},
				{
					"color": "#6c6c83",
					"name": "Base / Four",
					"slug": "base-4"
				},
				{
					"color": "#1a202c",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#394f66",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#563c30",
					"name": "Accent / Two",
					"slug": "accent-2"
				},
				{
					"color": "#f1ecf1",
					"name": "Accent / Three",
					"slug": "accent-3"
				},
				{
					"color": "#dde8f3",
					"name": "Accent / Four",
					"slug": "accent-4"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				},
				{
					"color": "#000000",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#f5f5f5",
					"name": "Background Accent",
					"slug": "background-accent"
				},
				{
					"color": "#0073aa",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				}
			]
		},
		"layout": {
			"contentSize": "960px",
			"wideSize": "1240px"
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true,
			"spacingSizes": [
				{
					"name": "Tiny",
					"size": "8px",
					"slug": "tiny"
				},
				{
					"name": "Small",
					"size": "16px",
					"slug": "small"
				},
				{
					"name": "Medium ( 32px / 24px )",
					"size": "clamp(24px, calc(1.5rem + ((1vw - 7.68px) * 1.5625)), 32px)",
					"slug": "medium"
				},
				{
					"name": "Large ( 32px / 48px )",
					"size": "clamp(32px, calc(2rem + ((1vw - 7.68px) * 3.125)), 48px)",
					"slug": "large"
				},
				{
					"name": "Extra Large ( 32px / 64px )",
					"size": "clamp(32px, calc(2rem + ((1vw - 7.68px) * 6.25)), 64px)",
					"slug": "x-large"
				},
				{
					"name": "2xl ( 32px / 80px )",
					"size": "clamp(32px, calc(2rem + ((1vw - 7.68px) * 9.375)), 80px)",
					"slug": "xx-large"
				},
				{
					"name": "3xl ( 48px / 96px )",
					"size": "clamp(48px, calc(3rem + ((1vw - 7.68px) * 9.375)), 96px)",
					"slug": "xxx-large"
				},
				{
					"name": "4xl ( 60px / 150px )",
					"size": "clamp(60px, calc(6rem + ((1vw - 7.68px) * 9.375)), 150px)",
					"slug": "xxsx-large"
				}
			],
			"units": ["%", "px", "em", "rem", "vh", "vw"]
		},
		"typography": {
			"defaultFontSizes": false,
			"dropCap": false,
			"letterSpacing": true,
			"lineHeight": true,
			"fluid": true,
			"fontWeight": true,
			"fontFamilies": [
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
				},
				{
					"name": "Roboto Flex",
					"slug": "roboto-flex",
					"fontFamily": "Roboto Flex,\"Segoe UI\",\"Helvetica Neue\",sans-serif",
					"fontFace": [
						{
							"fontFamily": "Roboto Flex",
							"fontWeight": "100 1000",
							"fontStretch": "25% 151%",
							"fontStyle": "normal italic",
							"src": [
								"file:./assets/fonts/RobotoFlex-VariableFont_GRAD,XTRA,YOPQ,YTAS,YTDE,YTFI,YTLC,YTUC,opsz,slnt,wdth,wght.woff2"
							]
						}
					]
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "normal",
					"size": "1rem",
					"name": "Normal",
					"fluid": false
				},
				{
					"slug": "normalplus",
					"size": "1.25rem",
					"name": "Normal Plus",
					"fluid": {
						"min": "1rem",
						"max": "1.25rem"
					}
				},
				{
					"slug": "medium",
					"size": "1.5rem",
					"name": "Medium",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "mediumplus",
					"size": "1.75rem",
					"name": "Medium Plus",
					"fluid": {
						"min": "1.325rem",
						"max": "1.75rem"
					}
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.25rem",
					"name": "XL",
					"fluid": {
						"min": "1.75rem",
						"max": "2.25rem"
					}
				},
				{
					"slug": "xx-large",
					"size": "2.5rem",
					"name": "XXL",
					"fluid": {
						"min": "2rem",
						"max": "2.5rem"
					}
				},
				{
					"slug": "xxx-large",
					"size": "3rem",
					"name": "XXL",
					"fluid": {
						"min": "2rem",
						"max": "3rem"
					}
				}
			]
		},
		"useRootPaddingAwareAlignments": true,
		"shadow": {
			"defaultPresets": true,
			"presets": [
				{
					"name": "Small",
					"slug": "small",
					"shadow": "0 1px 3px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"shadow": "0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)"
				},
				{
					"name": "Large",
					"slug": "large",
					"shadow": "0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)"
				}
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"dimensions": {
			"minHeight": true
		}
	},
	"styles": {
		"typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"fontFamily": "var(--wp--preset--font-family--roboto-flex)",
			"lineHeight": "1.7",
			"fontWeight": "300"
		},
		"blocks": {
			"core/code": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
			},
			"core/latest-comments": {
				"spacing": {
					"padding": {
						"left": "0px"
					}
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--accent-2)"
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/post-navigation-link": {
				"typography": {
					"fontWeight": "400",
					"textDecoration": "none"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"color": {
					"text": "var(--wp--preset--color--accent-2)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-2)"
						}
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"color": {
					"text": "var(--wp--preset--color--accent-2)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-2)"
						}
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				},
				"color": {
					"text": "var(--wp--preset--color--accent-2)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-2)"
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent)"
						}
					}
				}
			},
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--accent)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto-flex)",
					"fontWeight": "400",
					"letterSpacing": "0.5px"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--accent)"
							},
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontWeight": "400"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent)"
						}
					}
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-4)"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--text)"
		},
		"css": ".sidebar{ background: var(--wp--preset--color--accent); border-radius: 4px;}",
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roboto-flex)",
					"fontWeight": "600"
				},
				"color": {
					"text": "var(--wp--preset--color--accent-4)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--accent-4)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent-2)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--accent-2)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--accent-2)"
					}
				}
			},
			"button": {
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "1px",
					"style": "solid",
					"radius": "10px"
				},
				"color": {
					"background": "var(--wp--preset--color--accent-2)",
					"text": "var(--wp--preset--color--base)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontWeight": "700"
				},
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--accent)"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"area": "uncategorized",
			"name": "comments",
			"title": "Comments"
		},
		{
			"area": "uncategorized",
			"name": "post-meta",
			"title": "Post Meta"
		}
	],
	"blockStyles": [
		{
			"name": "no-margin",
			"label": "Ohne Au√üenabstand",
			"block": "core/group",
			"style": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				}
			}
		}
	]
}
